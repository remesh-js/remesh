{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "references": [
    {
      "path": "../../packages/remesh/tsconfig.esm.json"
    },
    {
      "path": "../../packages/remesh-react/tsconfig.esm.json"
    },
    {
      "path": "../../packages/remesh-redux-devtools/tsconfig.esm.json"
    },
    {
      "path": "../../packages/remesh-logger/tsconfig.esm.json"
    },
    {
      "path": "../../packages/remesh-yjs/tsconfig.esm.json"
    },
    {
      "path": "./tsconfig.node.json"
    },
    {
      "path": "../domains/tsconfig.json"
    }
  ],
  "include": ["src"]
}
